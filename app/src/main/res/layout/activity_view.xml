<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewActivity" android:id="@+id/linearLayout3">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewView"
        android:layout_width="167dp"
        android:layout_height="167dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="8dp"
        android:text="Telefonar"
        app:icon="@android:drawable/stat_sys_phone_call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.289"
        app:layout_constraintStart_toEndOf="@+id/imageViewView"
        app:layout_constraintTop_toTopOf="@+id/imageViewView" />

    <TextView
            android:text="Nome:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/viewNomeLabel" android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageViewView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewNomeView"
            app:layout_constraintTop_toBottomOf="@+id/viewNomeLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Telefone:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/viewTelefoneLabel" android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/textViewNomeView" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewTelefoneView"
            app:layout_constraintTop_toBottomOf="@+id/viewTelefoneLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Observação: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/viewObsLabel" android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTelefoneView" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewObsView"
            app:layout_constraintTop_toBottomOf="@+id/viewObsLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
