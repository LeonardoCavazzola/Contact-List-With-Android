<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" android:id="@+id/fotoView"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/textNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Nome"/>
        <TextView
                android:text="Telefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textTelefone"/>
        <TextView
                android:text="Obs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textObs"/>
    </LinearLayout>

</LinearLayout>

